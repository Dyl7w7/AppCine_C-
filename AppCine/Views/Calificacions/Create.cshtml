@model AppCine.Models.Calificacion

@{
    ViewData["Title"] = "Create";
}

<h1>Crear calificación</h1>

<h4>Calificación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idcalificacion" class="control-label"></label>
                <input asp-for="Idcalificacion" class="form-control" />
                <span asp-validation-for="Idcalificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idpelicula" class="control-label"></label>
                <select asp-for="Idpelicula" class ="form-control" asp-items="ViewBag.Idpelicula"></select>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion1" class="control-label"></label>
                <input asp-for="Calificacion1" class="form-control" />
                <span asp-validation-for="Calificacion1" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Crear calificación" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
