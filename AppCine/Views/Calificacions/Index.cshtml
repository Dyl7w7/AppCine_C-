@model IEnumerable<AppCine.Models.Calificacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Calificaciones</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear calificación</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                Calificación
            </th>
            <th>
                Película
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
            
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdpeliculaNavigation.Titulo)
            </td>
            <td>

                    <div class="d-flex justify-content-center">
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Idcalificacion"><i class="fa-solid fa-circle-info"></i></a>

                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Idcalificacion" asp-controller="Calificacions"><i class="fa-solid fa-pen-to-square"></i></a>

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal-@item.Idpelicula">
                            <i class="fa-solid fa-trash"></i>
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal-@item.Idcalificacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">¿Desea eliminar?</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <i class="fa-solid fa-circle-exclamation fa-shake fa-2xl" style="color: #bd0000; font-size: 130px; margin: 50px 50px"></i>
                                        <br><br>
                                        ¿Desea eliminar esta calificación?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Idcalificacion" asp-controller="Calificacions">Eliminar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>


